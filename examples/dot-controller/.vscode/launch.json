{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run in ts-node",
            "type": "node",
            "request": "launch",
            "args": [
                "src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "env": {
                "TS_NODE_PROJECT": "tsconfig.json"
            },
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        }
    ]
}